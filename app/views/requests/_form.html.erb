<%= form_with(model: request) do |form| %>
  <% if request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
        <% request.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :urgency, 'How urgently do you need these items?' %>
    <%= form.number_field :urgency %>
  </div>

  <div class="field">
    <%= form.label :full_name, 'Full Name' %>
    <%= form.text_field :full_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :phone, 'Phone Number' %>
    <%= form.number_field :phone %>
  </div>

  <div class="field">
    <%= form.label :type, 'I am a guardian/foster parent/case manager for a...' %>
    <%= form.number_field :type %>
  </div>

  <div class="field">
    <%= form.label :county, 'Select county' %>
    <%= form.number_field :county %>
  </div>

  <div class="field">
    <%= form.label :meet, 'Can you meet us at your local DFCS office?' %>
    <%= radio_button_tag :meet, 1, 'Yes' %> Yes
    <br />
    <%= radio_button_tag :meet, 0, 'No' %> No, my address is:
    <br />
    <%= form.text_area :address %>
  </div>

  <div class="field">
    <%= form.label :availability, 'What\'s your availability?' %>
    <%= form.text_field :availability %>
  </div>

  <div class="field">
    <%= form.label :comments %>
    <%= form.text_area :comments %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
