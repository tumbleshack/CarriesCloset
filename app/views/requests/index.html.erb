<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Urgency</th>
      <th>Full name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Type</th>
      <th>County</th>
      <th>Meet</th>
      <th>Availability</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.urgency %></td>
        <td><%= request.full_name %></td>
        <td><%= request.email %></td>
        <td><%= request.phone %></td>
        <td><%= request.type %></td>
        <td><%= request.county %></td>
        <td><%= request.meet %></td>
        <td><%= request.availability %></td>
        <td><%= request.comments %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>
