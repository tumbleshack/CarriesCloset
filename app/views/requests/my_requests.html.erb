<h1>My Donation Requests</h1>

<table>
  <thead>
    <tr>
      <th>Urgency</th>
      <th>Full name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Relationship</th>
      <th>County</th>
      <th>Meet</th>
      <th>Address</th>
      <th>Availability</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% if @requests != nil %>
    <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.urgency %></td>
        <td><%= request.full_name %></td>
        <td><%= request.email %></td>
        <td><%= request.phone %></td>
        <td><%= request.relationship %></td>
        <td><%= request.county %></td>
        <td><%= request.meet %></td>
        <td><%= request.address %></td>
        <td><%= request.availability %></td>
        <td><%= request.comments %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>

        <td><%= button_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' }, class: "button-looks-like-link" %></td>

      </tr>
    <% end %>
    </tbody>
  <% end %>
</table>

<br>

<div class="links">
  <%= link_to 'New Request', new_request_path %>
</div>