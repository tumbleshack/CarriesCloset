<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Category</th>
      <th>Name</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.quantity %></td>
        <td><%= item.category.name %></td>
        <td><%= item.itemType %></td>
        <td><%= item.size %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= button_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "button-looks-like-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />
  <div class = "centered-div">
    <%= link_to 'Add Item Type', new_item_path, class: "home-link" %>
  </div>
<br />
  <div class = "centered-div">
    <%= link_to "View Pending Donations", "donations/", class: "home-link" %>
  </div>
