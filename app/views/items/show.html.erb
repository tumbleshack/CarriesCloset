<p id="notice"><%= notice %></p>

<h3>All <%= pluralize(2, @item.name).sub(/\d*/, "") %></h3>
<table>
  <thead>
    <th>Category Name</th>
    <th>Quantity</th>
  </thead>
  <tbody>
    <% @item.versions.each do |version| %>
      <tr>
        <td><%= version.category.name %></td>
        <td><%= version.size %></td>
        <td><%= version.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_item_path(@item) %> |
<%= link_to 'Back', items_path %>
<div class = "centered-div">
  <%= link_to "View Inventory", "/items", class: "home-link" %>
</div>
