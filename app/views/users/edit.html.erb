<div class="container">
  <%= form_for(@user) do |f| %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <%= f.label :admin, "Roles" %>
    <span>&nbsp;</span>
    <div class="field">
      <%= f.check_box :admin, autocomplete: "admin" %>
      <%= f.label :admin %>
      <%= f.check_box :volunteer, autocomplete: "volunteer" %>
      <%= f.label :volunteer %>
      <%= f.check_box :donor, autocomplete: "donor" %>
      <%= f.label :donor %>
      <%= f.check_box :donee, autocomplete: "donee" %>
      <%= f.label :donee %>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>

  <h3>Delete this account</h3>

  <%= button_to 'Remove This User', @user, method: :delete , data: {confirm: 'Are you sure you want to delete this user?' } %>

  <%= link_to "Back", :back %>
</div>
